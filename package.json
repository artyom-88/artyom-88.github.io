{
  "name": "artem-ganev-site",
  "version": "2.0.0",
  "private": false,
  "author": "Artem Ganev",
  "license": "GPL-3.0",
  "homepage": "https://artyom-88.github.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/artyom-88/artyom-88.github.io"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@9.13.2",
  "scripts": {
    "analyze": "pnpm run build --mode analyze",
    "build": "vite build",
    "build:ci": "tsc && pnpm build",
    "build:debug": "vite build --debug",
    "build:dev": "vite build --mode development",
    "depcheck": "pnpm dlx depcheck",
    "deploy:local": "pnpm build:ci && echo $(git rev-parse HEAD)  > ./dist/version && pnpm gh-pages -d dist -u \"ArtÑ‘m <artem_ganev@epam.com>\" -m \"Manual deploy\"",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "pre-commit": "tsc && lint-staged",
    "predeploy": "pnpm build",
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky",
    "preview": "vite preview",
    "start": "vite",
    "start:debug": "vite --debug",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:ui": "vitest --ui",
    "test:watch": "vitest watch",
    "update": "pnpm dlx npm-check -u -E -s"
  },
  "dependencies": {
    "@ant-design/icons": "5.5.1",
    "@stackoverflow/stacks-icons": "2.27.0",
    "@tanstack/react-query": "5.60.5",
    "antd": "5.22.1",
    "dayjs": "1.11.13",
    "ky": "1.7.2",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-router-dom": "6.28.0"
  },
  "devDependencies": {
    "@playwright/test": "1.55.0",
    "@tailwindcss/postcss": "4.1.13",
    "@testing-library/jest-dom": "6.8.0",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "22.13.10",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.9",
    "@vitejs/plugin-basic-ssl": "1.2.0",
    "@vitejs/plugin-react": "5.0.2",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "@biomejs/biome": "2.2.2",
    "autoprefixer": "10.4.21",
    "dotenv": "16.4.5",
    "gh-pages": "6.2.0",
    "husky": "9.1.7",
    "jsdom": "26.1.0",
    "lint-staged": "16.1.6",
    "postcss": "8.5.6",
    "rollup-plugin-visualizer": "5.12.0",
    "sass": "1.81.0",
    "tailwindcss": "4.1.13",
    "typescript": "5.9.2",
    "vite": "7.1.4",
    "vite-plugin-svgo": "2.0.0",
    "vitest": "3.2.4"
  },
  "pnpm": {
    "overrides": {
      "@babel/runtime": ">=7.26.10",
      "react": "$react",
      "react-dom": "$react-dom",
      "vite": "$vite"
    }
  },
  "lint-staged": {
    "*": [
      "biome check --write"
    ]
  }
}
